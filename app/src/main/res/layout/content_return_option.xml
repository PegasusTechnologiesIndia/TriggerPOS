<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ReturnOptionActivity"
    tools:showIn="@layout/activity_return_option">

    <Button
        android:id="@+id/btn_cus_return"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/customer_return"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#403c3c"
        style="@style/AppTheme.HorizontalButton"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_inv_return"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/invoice_return"
        android:layout_below="@+id/btn_cus_return"
        android:layout_centerHorizontal="true"
        android:background="#403c3c"
        style="@style/AppTheme.HorizontalButton"
        android:layout_marginTop="20dp"/>

</RelativeLayout>