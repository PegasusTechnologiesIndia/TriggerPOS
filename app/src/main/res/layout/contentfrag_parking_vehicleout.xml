<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_parkingindustry_vehicleout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/whitecolor"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.phomellolitepos.Fragment.VehicleOUT_Fragment"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_vehicleno_layout"
            style="@style/AppTheme.TextInputLayout"
            android:layout_alignParentLeft="true"
            android:layout_weight=".5"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/edt_vehiclemobileno"
                style="@style/AppTheme.EditText"
                android:hint="@string/vehiclenoormobileno"
                android:inputType="text"
                android:paddingLeft="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>
<Button
    android:id="@+id/btn_enter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:background="@drawable/ic_exit_balck24dp"

    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:layout_weight=".5"
    />
</LinearLayout>
        <TextView
            android:id="@+id/txt_norecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>

        <LinearLayout
            android:id="@+id/ll_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Slip No"
                    android:textColor="@color/black"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/tv_slipno"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Vehicle No"
                    android:textColor="@color/black"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/tv_vehicleno"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Mobile No"
                    android:textColor="@color/black"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/tv_mobileno"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_nfc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Mobile No"
                    android:textColor="@color/black"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/tv_nfctag"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Paid Amount"
                    android:textColor="@color/black"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/tv_amnt"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView

                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Due Amount"
                    android:textColor="@color/black"

                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_dueamnt"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text=""
                    android:textColor="@color/black"

                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView

                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="In Time"
                    android:textColor="@color/black"

                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_intym"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text=""
                    android:textColor="@color/black"

                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView

                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Vehicle Status"
                    android:textColor="@color/black"

                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_vstatus"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text=""
                    android:textColor="@color/black"

                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_ittype"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lbl_spn_item_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:text="@string/paymemtmode" />

        <Spinner
            android:id="@+id/spinner_item_payment"
            style="@style/AppTheme.Spinner"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:inputType="text">
        </Spinner>
    </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_advanceamnt_layout"
            style="@style/AppTheme.TextInputLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/edt_collectamnt"
                style="@style/AppTheme.EditText"
                android:hint="@string/collectamnt"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:enabled="false"
                android:paddingLeft="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"

                android:layout_weight=".5"
                android:background="@color/colorPrimary"
                android:text="@string/collect"
                android:textColor="@color/whitecolor"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight=".5"
                android:background="@color/colorPrimary"
                android:text="@string/reset"
                android:textColor="@color/whitecolor" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</FrameLayout>