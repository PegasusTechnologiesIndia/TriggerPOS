<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.phomellolitepos.UserActivity"
    tools:showIn="@layout/activity_user">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_layout_user_code"
            style="@style/AppTheme.TextInputLayout"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/edt_user_code"
                style="@style/AppTheme.EditText"
                android:hint="User Code (Auto Generated)"
                android:selectAllOnFocus="true"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_layout_user_name"
            style="@style/AppTheme.TextInputLayout"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/edt_user_name"
                style="@style/AppTheme.EditText"
                android:hint="@string/User_Name"
                android:selectAllOnFocus="true"/>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_layout_email"
            style="@style/AppTheme.TextInputLayout"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"

            >

            <EditText
                android:id="@+id/edt_email"
                style="@style/AppTheme.EditText"
                android:hint="@string/Email"
                android:selectAllOnFocus="true"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_layout_password"
            style="@style/AppTheme.TextInputLayout"
            android:textColor="@color/black"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/black"
            android:layout_margin="5dp"
            app:passwordToggleTintMode="src_atop" >

            <EditText
                android:id="@+id/edt_password"
                style="@style/AppTheme.EditText"
                android:hint="@string/Password"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_layout_max_discount"
            style="@style/AppTheme.TextInputLayout"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/edt_max_discount"
                style="@style/AppTheme.EditText"
                android:hint="@string/Max_Discount"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true"/>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            style="@style/AppTheme.HorizontalButtonLayout"
            android:layout_below="@+id/edt_layout_item_ct_name"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/btn_save"
                style="@style/AppTheme.HorizontalButton"
                android:layout_below="@+id/edt_layout_item_description"
                android:text="@string/save" />

            <Button
                android:id="@+id/btn_item_delete"
                style="@style/AppTheme.HorizontalButton"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#403c3c"
                android:text="@string/delete"
                android:visibility="gone" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>
