<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_table_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"


    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_daily_sales_report">

    <LinearLayout
        android:id="@+id/lbl_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8e3d5"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/ll_park"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/button_color">

                <TextView
                    android:id="@+id/txt_companyname"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="etyuuyio"
                    android:textColor="@color/whitecolor"
                    android:textSize="20dp"


                    />

                <TextView
                    android:id="@+id/txt_adress"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="etyuuyio"
                    android:textColor="@color/whitecolor"
                    android:textSize="15dp"
                    android:visibility="gone"


                    />


            </TableRow>
            /

            <TableRow
                android:id="@+id/ll_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fbbf8f">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="40sp"
                    android:layout_weight=".5"
                    android:background="@drawable/cell_shapecolor"
                    android:gravity="left|center"
                    android:paddingLeft="5dp"
                    android:text="@string/Date"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="0sp"
                    android:layout_height="40sp"
                    android:layout_gravity="left"
                    android:layout_weight=".5"
                    android:background="@drawable/cell_shapecolor"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:id="@+id/ll_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fbbf8f"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="30dp"
                    android:layout_weight=".5"
                    android:background="@drawable/cell_shapecolor"
                    android:gravity="left|center"
                    android:paddingLeft="5dp"
                    android:text="@string/salesperson"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txt_salesperson"
                    android:layout_width="0sp"
                    android:layout_height="30dp"
                    android:layout_gravity="left"
                    android:layout_weight=".5"
                    android:background="@drawable/cell_shapecolor"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="17sp" />


            </TableRow>

            <TableRow
                android:id="@+id/ll_statusout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fbbf8f"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/cell_shapecolor"
                    android:gravity="left|center"
                    android:paddingLeft="5dp"
                    android:text="@string/Order_Type"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txt_ordertype"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight=".5"
                    android:background="@drawable/cell_shapecolor"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="17sp" />

            </TableRow>

            <TableRow
                android:id="@+id/totllay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fbbf8f"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:background="@drawable/cell_shapecolor"
                    android:gravity="left|center"
                    android:paddingLeft="5dp"
                    android:text="@string/Totalsum"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/totalamnt"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight=".5"
                    android:background="@drawable/cell_shapecolor"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="17sp" />

            </TableRow>

        </TableLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lbl_table"
        android:background="#f8e3d5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Records : "
                android:textSize="18sp"
                android:gravity="right"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_totalRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="left"
                android:text="00"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/table_title"
            style="@style/AppTheme.NoListfoundText"
            android:text="@string/No_Table_Fnd"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/report_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:scrollbars="vertical">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</RelativeLayout>
