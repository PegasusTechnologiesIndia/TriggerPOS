<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_activate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="litepos.pegasus_andorid_1.example.com.litepos.org.phomellolitepos.ActivateActivity"
    tools:showIn="@layout/activity_activate">

    <TextView
        android:id="@+id/txt_expiry"
        android:text="@string/ExpiryDate"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        style="@style/AppTheme.LabelText"
        />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:text="@string/Activate"
        android:background="#fb7c3e"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/edt_expiry"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/edt_expiry"
        android:layout_marginTop="18dp"
        android:enabled="false"
        android:paddingLeft="10dp"
        style="@style/AppTheme.SimpleEditText"
        android:textColor="#fb7c3e"
        android:layout_below="@+id/txt_expiry"
        android:layout_alignLeft="@+id/txt_expiry"
        android:layout_alignStart="@+id/txt_expiry"/>

</RelativeLayout>
