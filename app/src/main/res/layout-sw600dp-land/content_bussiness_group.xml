<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_bussiness_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.phomellolitepos.BussinessGroupActivity"
    tools:showIn="@layout/activity_bussiness_group">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_layout_business_gp_code"
        style="@style/AppTheme.TextInputLayout"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

        <EditText
            android:id="@+id/edt_business_gp_code"
            style="@style/AppTheme.EditText"
            android:hint="Bussiness Group Code (Auto Generated)"
            android:selectAllOnFocus="true"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_layout_business_gp_name"
        style="@style/AppTheme.TextInputLayout"
        android:layout_below="@+id/edt_layout_business_gp_code"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

        <EditText
            android:id="@+id/edt_business_gp_name"
            style="@style/AppTheme.EditText"
            android:hint="@string/bussiness_group_name"
            android:selectAllOnFocus="true"/>

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout

        style="@style/AppTheme.HorizontalButtonLayout"
        android:layout_below="@+id/edt_layout_business_gp_name"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/btn_save"
            style="@style/AppTheme.HorizontalButton"
            android:text="@string/save"

            />


        <Button
            android:id="@+id/btn_delete"
            style="@style/AppTheme.HorizontalButton"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#403c3c"
            android:text="@string/delete"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>
