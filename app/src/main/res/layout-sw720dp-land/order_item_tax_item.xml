<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="20dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:weightSum="60">

                <TextView
                    android:id="@+id/txt_sr_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5"
                    android:paddingLeft="8dp"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txt_item_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.9"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/txt_item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.7"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tax_tax_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9.8"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txt_item_gp_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/txt_item_gp_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tax_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.8"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tax_invc_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.3"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="17sp" />

            </TableRow>

        </TableLayout>
    </LinearLayout>
</LinearLayout>