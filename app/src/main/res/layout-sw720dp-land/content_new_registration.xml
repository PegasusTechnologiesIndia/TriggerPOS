<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="50dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.phomellolitepos.NewRegistrationActivity"
    tools:showIn="@layout/activity_new_registration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_company_name_layout"
            style="@style/AppTheme.TextInputLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/edt_company_name"
                style="@style/AppTheme.EditText"
                android:hint="@string/CompanyName"
                android:inputType="text"
                android:paddingLeft="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_first_name_layout"
            style="@style/AppTheme.TextInputLayout"
            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/edt_first_name"
                style="@style/AppTheme.EditText"
                android:hint="@string/firstname"
                android:inputType="text"
                android:paddingLeft="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_last_name_layout"
            style="@style/AppTheme.TextInputLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/edt_last_name"
                style="@style/AppTheme.EditText"
                android:hint="@string/lastname"
                android:inputType="text"

                android:paddingLeft="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_email_layout"
            style="@style/AppTheme.TextInputLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/edt_email"
                style="@style/AppTheme.EditText"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>


            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinnercountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spinnerZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spinnerproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_mobile_layout"
            style="@style/AppTheme.TextInputLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/edt_mobile"
                style="@style/AppTheme.EditText"
                android:hint="@string/Mobile"
                android:inputType="phone"
                android:paddingLeft="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_adress_layout"
            style="@style/AppTheme.TextInputLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/edt_address"
                style="@style/AppTheme.EditText"
                android:hint="@string/Address"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_city_layout"
            style="@style/AppTheme.TextInputLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/edt_city"
                style="@style/AppTheme.EditText"
                android:hint="@string/city"
                android:inputType="text"
                android:paddingLeft="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edt_password_layout"
            style="@style/AppTheme.TextInputLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <EditText
                android:id="@+id/edt_password"
                style="@style/AppTheme.EditText"
                android:hint="@string/Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>