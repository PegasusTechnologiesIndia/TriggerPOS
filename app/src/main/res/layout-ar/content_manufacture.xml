<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_manufacture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="litepos.pegasus_andorid_1.example.com.litepos.org.phomellolitepos.ManufactureActivity"
    tools:showIn="@layout/activity_manufacture">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edt_layout_manufacture_code"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        style="@style/AppTheme.TextInputLayout"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
        >

        <EditText
            android:id="@+id/edt_manufacture_code"
            android:hint="@string/Manufacture_Code"
            style="@style/AppTheme.EditText"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edt_layout_manufacture_name"
        android:layout_below="@+id/edt_layout_manufacture_code"
        style="@style/AppTheme.TextInputLayout"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
        >

        <EditText

            android:id="@+id/edt_manufacture_name"
            android:hint="@string/Manufacture_Name"
            style="@style/AppTheme.EditText"/>

    </android.support.design.widget.TextInputLayout>


    <LinearLayout

        android:layout_below="@+id/edt_layout_manufacture_name"
        android:layout_marginTop="40dp"
        style="@style/AppTheme.HorizontalButtonLayout">

        <Button
            android:id="@+id/btn_save"
            android:text="@string/save"
            style="@style/AppTheme.HorizontalButton"

            />

        <Button
            android:id="@+id/btn_manufacture_delete"
            android:text="@string/delete"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            style="@style/AppTheme.HorizontalButton"
            android:visibility="gone"
            android:background="#403c3c"
            />


    </LinearLayout>


</RelativeLayout>
