<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="20dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:weightSum="60">

                <TextView
                    android:id="@+id/txt_sr_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:text="S_No."
                    android:textColor="#333333"
                    android:gravity="right"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txt_odr_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:text="Code"
                    android:gravity="right"
                    android:textColor="#333333"
                    android:textSize="17sp" />


                <TextView
                    android:id="@+id/txt_tax_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.4"
                    android:text=""
                    android:gravity="right"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    android:layout_marginRight="90dp"/>

                <TextView
                    android:id="@+id/txt_odr_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8.5"
                    android:gravity="center"
                    android:text="Qty"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    />


                <TextView
                    android:id="@+id/txt_odr_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="Cost Price"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txt_tax_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="13"
                    android:text="Sale Price"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="17sp"
                    />

                <TextView
                    android:id="@+id/txt_odr_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.3"
                    android:text="Tax"
                    android:gravity="center"
                    android:textColor="#333333"
                    android:textSize="17sp" />

            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>